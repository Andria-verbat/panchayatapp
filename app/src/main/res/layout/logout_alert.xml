<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_edge_edittext">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to logout?"
        android:id="@+id/confirmtext"
        android:textAlignment="center"

        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/proxima_nova_bold"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/confirmtext"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:id="@+id/rl_yes"
            android:background="@drawable/yes_btn_bg">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:text="Yes"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:fontFamily="@font/proxima_nova_bold"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginRight="1dp"
            android:id="@+id/rl_no"
            android:background="@drawable/no_btn_bg">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:text="No"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:fontFamily="@font/proxima_nova_bold"/>

        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>