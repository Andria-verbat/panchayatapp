<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/round_edge_edittext">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Application Form"
        android:id="@+id/confirmtext"

        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/proxima_nova_bold"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_profile"
        android:id="@+id/profImage"/>
    <EditText
        android:id="@+id/edt_panchaytName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/purple_700"
        android:textColorHint="@color/purple_500"
        android:textColor="@color/textColor"
        android:editable="false"
        android:hint="Panchayat Name" />
    <EditText
        android:id="@+id/edt_fullname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/purple_700"
        android:textColorHint="@color/purple_500"
        android:textColor="@color/textColor"
        android:hint="Full Name" />
    <EditText
        android:id="@+id/edt_pdesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/purple_700"
        android:textColorHint="@color/purple_500"
        android:textColor="@color/textColor"
        android:hint="Project Description" />
    <EditText
        android:id="@+id/edt_mobnum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:inputType="number"
        android:maxLength="10"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/purple_700"
        android:textColorHint="@color/purple_500"
        android:textColor="@color/textColor"
        android:imeOptions="actionDone"
        android:hint="Registered Mobile Number" />

    <EditText
        android:id="@+id/edt_dob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:clickable="true"
        android:editable="false"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/purple_700"
        android:textColorHint="@color/purple_500"
        android:textColor="@color/textColor"
        android:hint="Date of Birth" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:id="@+id/applnbtn_submit"
        android:text="SUBMIT" />


</LinearLayout>